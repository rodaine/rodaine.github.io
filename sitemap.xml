<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	{% for post in site.posts %}{% unless post.sitemap == false %}<url>
		<loc>{{ site.url }}{{ post.url | remove: 'index.html' }}</loc>
		<lastmod>{% if post.updated and post.updated != empty %}{{ post.updated | date_to_xmlschema}}{% else %}{{ post.date | date_to_xmlschema}}{% endif %}</lastmod>
		<priority>0.6</priority>
		<changefreq>monthly</changefreq>
	</url>
	{% endunless %}{% endfor %}{% for page in site.pages %}{% if page.layout != nil %}{% unless page.url contains '/page/' or page.sitemap == false  %}<url>
		<loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
		<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
		<priority>{% if page.url == '/index.html' %}1.0{% else %}0.8{% endif %}</priority>
		<changefreq>weekly</changefreq>
	</url>
{% endunless %}{% endif %}{% endfor %}</urlset>
