layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
	<ShortName>{{ site.name }}</ShortName>
	<LongName>{{ site.name }} Search Results</LongName>
	<Description>Search through articles posted on {{ site.name }}</Description>
	<Tags>{{ site.keywords }}</Tags>
	<Contact>{{ site.contact }}</Contact>
	<Url type="text/html" template="{{ site.url }}/search/?q={searchTerms}"/>
	<Image height="16" width="16" type="image/vnd.microsoft.icon">{{ site.url }}/favicon.ico</Image>
	<Developer>Chris Roche</Developer>
	<Attribution>Search data for http://rodaine.com provided by Google Custom Search</Attribution>
	<SyndicationRight>open</SyndicationRight>
	<AdultContent>false</AdultContent>
	<Language>en-us</Language>
	<OutputEncoding>UTF-8</OutputEncoding>
	<InputEncoding>UTF-8</InputEncoding>
</OpenSearchDescription>
